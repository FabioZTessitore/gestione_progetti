<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>ACME - Gestione Progetti - Amministrazione</title>
    </head>

    <body>
        <h1>Gestione Progetti</h1>

        <h2>Amministrazione</h2>

        <h3>Impiegato</h3>

        <p><a href="/admin/impiegati">Impiegati</a></p>

        <form action="/admin/impiegati/edit"  method="POST">
            <input type="hidden" name="id" value="<%= impiegato.id %>">
            <input type="text" name="cognome" value="<%= impiegato.cognome %>">
            <label for="cognome">Cognome:</label>
            <input type="text" name="nome" value="<%= impiegato.nome %>">
            <label for="nome">Nome:</label>
            <input type="submit" value="Salva">
        </form>

        <form action="/admin/impiegato/dipartimento" method="POST">
            <input type="hidden" name="id" value="<%= impiegato.id %>">
            <select name="dipartimento" id="dipartimento">
                <% dipartimenti.forEach(function (dipartimento) { %>
                    <option value="<%= dipartimento.id %>"><%= dipartimento.nome %></option>
                <% }); %>
            </select>
            <label for="dipartimento">Scegli dipartimento:</label>
            <input type="submit" value="Aggiungi dipartimento">
        </form> 
    </body>
</html>