<!DOCTYPE html>

<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

        <title>ACME - Gestione Progetti - Amministrazione</title>
    </head>

    <body>
        <h1>Gestione Progetti</h1>

        <h2>Amministrazione</h2>

        <h3>Progetti</h3>

        <p><a href="/admin">Admin</a></p>

        <form action = "/admin/progetti"  method="POST">
            <input type="text" name="nome" id="nome">
            <label for="nome">Nome Progetto:</label>
            <br>
            <input type="text" name="budjet" id="budjet">
            <label for="budjet">Inserisci il budjet previsto:</label>
            <br>
            <input type="submit" value="Crea Progetto">
        </form>

        <ul>
            <% progetti.forEach(function (progetto) { %>
                <li><%= progetto.nome %> - <%= progetto.budjet %> - <a href="/admin/progetti/<%= progetto.id %>">modifica</a></li>
            <% }); %>
       </ul>
    </body>
</html>